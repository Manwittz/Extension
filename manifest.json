{
    "manifest_version": 2,
    "name": "Browser Automator MVP",
    "version": "1.0",
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "activeTab",
        "storage",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
    }
}